# ---------------------------------------------------------------------------- #
# Parameters for the RasPiAlarm alarm clock using a raspberry pi zero
# ---------------------------------------------------------------------------- #

# Parameters for reading the weather from Yahoo Weather
[weather]
enabled = 1
stype = content
# Find your location here: http://woeid.rosselliot.co.nz/
# location = 12781882    # Minneapolis, MN
location = 12781056
# location = 12782475    # Brainerd, MN
# location = 12781012    # Monroe, WI
host = query.yahooapis.com
path = /v1/public/yql?q=select%%20*%%20from%%20weather.forecast%%20where%%20woeid%%3D
pathtail = &format=json


